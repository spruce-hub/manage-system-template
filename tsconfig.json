{
    "compilerOptions": {
      "target": "ES2017",
      "useDefineForClassFields": true,
      "module": "esnext",
      "lib": ["esnext", "dom"],
      "moduleResolution": "bundler",
      "strict": true,
      "jsx": "preserve",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "noImplicitAny": true,
      "baseUrl": "./",
      "paths": {
        "@/*": ["src/*"],
      },
      "types": ["vite/client", "node"]
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.d.ts",
      "src/**/*.tsx",
      "src/**/*.vue",
      "auto-imports.d.ts"
    ]
  }
